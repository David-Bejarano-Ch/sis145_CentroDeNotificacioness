<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Ayuda">
    <!-- activity_long_scroll.xml -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-80dp"
        tools:layout_editor_absoluteY="151dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Agrega tus elementos aquí -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="¿Cómo empezar?"
                android:textSize="28sp"
                android:textStyle="italic" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Registro y inicio de sesión"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <!-- Agrega más elementos -->

            <TextView
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Navegación y exploración"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Configuración de notificaciones"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Uso de filtros y búsquedas"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Agregar y editar contenido"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Compartir contenido con otros usuarios"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Privacidad y seguridad"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="TextView"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView11"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Políticas de uso y términos de servicio"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Uso de herramientas y atajos"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Preguntas frecuentes (FAQ)"
                android:textSize="28sp"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Actualizaciones y nuevas características"
                android:textSize="28sp"
                android:textStyle="italic"/>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>