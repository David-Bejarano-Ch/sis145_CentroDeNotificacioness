<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#139CDF"
    android:backgroundTint="#E6F2FF"
    android:gravity="center"
    tools:context=".splashScreen">

    <ImageView
        android:id="@+id/SplashScreenImage"
        android:layout_width="326dp"
        android:layout_height="306dp"
        android:src="@drawable/fondo_app"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="320dp"
        android:layout_height="59dp"
        android:layout_alignStart="@+id/SplashScreenImage"
        android:layout_alignTop="@+id/SplashScreenImage"
        android:layout_alignEnd="@+id/SplashScreenImage"
        android:layout_alignBottom="@+id/SplashScreenImage"
        android:layout_marginStart="3dp"
        android:layout_marginTop="399dp"
        android:layout_marginEnd="3dp"
        android:layout_marginBottom="-152dp"
        android:text="Centro de Notificaciones"
        android:textColor="#ED1452CF"
        android:textSize="28sp"
        android:textStyle="bold" />


</RelativeLayout>